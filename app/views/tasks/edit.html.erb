<%= form_for @task , url: {action: :update} do |f| %>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
    <%= f.label :todo, 'Todo' %>
    <%= f.text_field :todo %>
    <%= f.label :date, 'Expire' %>
    <%= f.text_field :date %>
    <%= f.label :memo, 'Memo' %>
    <%= f.text_field :memo %>
    <%= f.submit '更新' %>
<% end %>
