<div class="example">
    <p class="solid"><%= @task.todo %></p>
    <p class="solid"><%= @task.date %></p>
</div>
<p class="solid">
<%= @task.title %>
<%= @task.memo %>
</p>
<p>
<%= form_with url: update_status_task_path(@task), local: true, method: :patch do |form| %>
  <%= form.select :status, ['未着手', '進行中', '完了'], selected: @task.status %>
  <%= form.submit '更新' %>
<% end %>
</p>
<div class="example">
<%= link_to 'Return', :back %>
<% if current_user %>
    <%= button_to 'delete', task_path(@task), method: :delete %>
    <%= button_to 'edit', edit_task_path(@task) %>
<% end %>
</div>

