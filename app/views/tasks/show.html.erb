
<h1 class="inner">Show</h1>
<div class="example" >
    <div class="child">Title
        <p class="solid"><%= @task.title %></p></div>
    <div class="child">Deadline
        <p class="solid"><%= @task.date %></p></div>

   
</div>

<p class="solid">
    Memo:<%= @task.memo %>
</p>

<div class="example">
    <%= link_to 'Return', :back %>
    <% if current_user %>
        <%= button_to 'Delete', task_path(@task), method: :delete %>
        <%= link_to 'Edit', edit_task_path(@task) %>
    <% end %>
</div>

