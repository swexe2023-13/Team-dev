<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>




<%= form_for @task , url: {action: :create} do |f| %>

  <% if current_user %>
<ul>
  <div class="example"><h4>Form</h4> <%= f.submit 'New To-Do' %></div>
  <div class="inner">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
    <%= f.label :date, 'Expire', class: 'controll-label' %>
    <%= f.datetime_field :date, class: 'form-controll' %>
    <p><%= f.label :memo, 'Memo' %></p>
    <%= f.text_area :memo ,style: "width:40%", rows: "3" %>
  </div>
</ul>

<% end %>

<%end%>


<ul>
  <table border=5>
    <tr>
      <th>Title</th>
      <th>Expire</th>
      <th>Status</th>
      <th>Delete</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr>
        <% if current_user %>
        <th><%= link_to task.title, task_path(task) %></th>
        <th><%= task.date %></th>
        <th><%= task.status %></th>
        
          <th><%= button_to 'Delete', task_path(task), method: :delete %></th>
        <% end %>
      </tr>
    <% end %>
  </table>
</ul>


<ul>
 <% if current_user %>
    <%= link_to 'Sign Out', top_logout_path %>
    <%= button_to 'Delete', user_path(current_user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <%= link_to 'Pass Change', edit_user_path(current_user)%>
  <% else %>
    <%= link_to 'Sign In', top_main_path %>
  <% end %>
</ul>
